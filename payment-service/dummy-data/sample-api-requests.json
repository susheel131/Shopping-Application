{
  "payment_requests": {
    "process_payment": {
      "endpoint": "POST /api/v1/payments/process",
      "request_body": {
        "userId": 1,
        "methodId": 1,
        "amount": 999.99,
        "currency": "USD",
        "orderId": 101,
        "description": "Order #101 - Shopping Items",
        "otp": "123456"
      },
      "expected_response": {
        "paymentId": "PAY-20231130-001",
        "userId": 1,
        "methodId": 1,
        "amount": 999.99,
        "currency": "USD",
        "status": "COMPLETED",
        "transactionId": "TXN-12345"
      }
    },
    "add_payment_method": {
      "endpoint": "POST /api/v1/payments/methods",
      "request_body": {
        "userId": 1,
        "type": "CREDIT_CARD",
        "cardNumber": "4532123456789012",
        "cardholderName": "John Doe",
        "expiryMonth": 12,
        "expiryYear": 2025,
        "cvv": "123",
        "isDefault": true
      }
    },
    "get_payment_history": {
      "endpoint": "GET /api/v1/payments/history/1?page=0&size=20",
      "query_params": {
        "page": 0,
        "size": 20,
        "status": "ALL"
      }
    },
    "initiate_refund": {
      "endpoint": "POST /api/v1/payments/PAY-001/refund",
      "request_body": {
        "amount": 999.99,
        "reason": "ORDER_CANCELLED",
        "notes": "Customer cancelled order"
      }
    }
  },
  "test_users": [
    {"id": 1, "name": "John Doe", "email": "john@example.com"},
    {"id": 2, "name": "Jane Smith", "email": "jane@example.com"},
    {"id": 3, "name": "Robert Wilson", "email": "robert@example.com"},
    {"id": 4, "name": "Emily Brown", "email": "emily@example.com"},
    {"id": 5, "name": "Michael Johnson", "email": "michael@example.com"}
  ]
}
